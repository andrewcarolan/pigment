{
  "name": "pigment",
  "version": "3.5.0",
  "description": "Syntax highlighter",
  "bin": "src/cli.js",
  "type": "module",
  "scripts": {
    "sass": "sass --no-source-map src/scss:dist/css",
    "format": "node src/cli",
    "build": "mkdir -p dist && npm run clean && npm run sass && cp -r src/index.* src/config.js src/scripts src/lib src/static dist",
    "clean": "rm -rf dist/**/*",
    "dev": "npm run build && serve dist"
  },
  "author": "Andrew Carolan <acarolan@brainstation.io>",
  "license": "ISC",
  "dependencies": {
    "open": "^8.4.0",
    "prismjs": "^1.29.0",
    "pug": "^3.0.2",
    "sass": "^1.54.9"
  },
  "devDependencies": {
    "serve": "^14.2.3"
  }
}
